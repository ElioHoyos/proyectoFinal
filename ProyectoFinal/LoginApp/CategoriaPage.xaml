<?xml version="1.0" encoding="utf-8" ?>
<CarouselPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.CategoriaPage"
             Title="Categoria">
    <ContentPage>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="40"></RowDefinition>
                    <RowDefinition Height="10"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Text="CATEGORIA"
                       Grid.Row="0"
                       FontAttributes="Bold"
                       FontSize="Large"
                       HorizontalOptions="CenterAndExpand"
                       VerticalOptions="Center"></Label>
                <StackLayout Grid.Row="1">
                    <Button VerticalOptions="Center"
                            Text="Agregar Categoria"
                            TextColor="Black"
                            BackgroundColor="Aquamarine"
                            BorderWidth="1.5"
                            CornerRadius="50"
                            FontAttributes="Bold"
                            Clicked="Button4_Clicked"></Button>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Grid Grid.Row="2"
                          VerticalOptions="CenterAndExpand"
                          Margin="10"
                          Padding="10"
                          BackgroundColor="White">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="3.5*"></ColumnDefinition>
                            <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Text="Nombre"
                               Grid.Column="0"
                               Grid.Row="0"
                               TextColor="Black"
                               Style="{DynamicResource headerTable}"></Label>
                        <Label Text="Descripcion"
                               Grid.Column="1"
                               Grid.Row="0"
                               TextColor="Black"
                               Style="{DynamicResource headerTable}"></Label>
                        <Label Text="Opciones"
                               Grid.Column="2"
                               Grid.Row="0"
                               TextColor="Black"
                               Style="{DynamicResource headerTable}"></Label>
                        <Label Text="Estado"
                               Grid.Column="3"
                               Grid.Row="0"
                               TextColor="Black"
                               Style="{DynamicResource headerTable}"></Label>
                    </Grid>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label Text="Spiderman"
                   FontSize="20"
                   BackgroundColor="SkyBlue"
                   TextColor="Black" />
            <Image Source="https://tinyurl.com/4zhdy7kd" />
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label Text="Goku"
                   FontSize="20"
                   Background="skyBlue"
                   TextColor="Black" />
            <Image Source="https://tinyurl.com/4f8m8hec" />
        </StackLayout>
    </ContentPage>
    <ContentPage>
        <StackLayout>
            <Label Text="One Piece"
                   FontSize="20"
                   Background="skyblue"
                   TextColor="Black" />
            <Image Source="https://tinyurl.com/mvpa6x8b" />
        </StackLayout>
    </ContentPage>
</CarouselPage>