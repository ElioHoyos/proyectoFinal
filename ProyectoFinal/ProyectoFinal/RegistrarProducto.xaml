<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.RegistrarProducto" BackgroundImageSource="https://tinyurl.com/bd46pt9x" >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registrar Nuevo Producto" FontAttributes="Bold" FontSize="30" ></Label>
            <Entry Placeholder= "Nombre" PlaceholderColor="Wheat" TextColor="White" x:Name="txtNombre" FontSize="20"/>
            <Entry Placeholder= "Descripcion" PlaceholderColor="Wheat" TextColor="White" x:Name="txtDescripcion" FontSize="20"/>
            <Entry Placeholder= "Codigo" PlaceholderColor="Wheat" TextColor="White" x:Name="txtOpciones" FontSize="20"/>
            <Entry Placeholder= "Estado" PlaceholderColor="Wheat" TextColor="White" x:Name="txtEstado" FontSize="20"/>

            <Button VerticalOptions="Center" Text="Registrar" BackgroundColor="Gray" x:Name="Registrar" CornerRadius="60" BorderWidth="2" BorderColor="White" Clicked="Registrar_Clicked" TextColor="Black" FontSize="15"/>
            <Button VerticalOptions="Center" Text="Cancelar" BackgroundColor="Gray" x:Name="Cancelar" CornerRadius="60" BorderWidth="2" BorderColor="White" Clicked="Cancelar_Clicked" TextColor="Black" FontSize="15"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>