<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.CategoriaRegistro">


    <StackLayout>
        <Label Text="Registro de Categoria" TranslationX="90" TranslationY="20" FontAttributes="Bold" FontSize="20"/>
        
        <Label Text="Nombre" HorizontalOptions="Start" TranslationX="20" TranslationY="100"/>

        <Entry Placeholder="Nombre" TranslationY="107" HorizontalOptions="Start" TranslationX="20" WidthRequest="360"/>

        <Label Text="Descripción" HorizontalOptions="Start" TranslationX="20" TranslationY="120"/>

        <Entry Placeholder="Descripción" TranslationY="120" HorizontalOptions="Start" TranslationX="20" WidthRequest="360"/>

        <Button Text="Cancelar" Clicked="Btnr_Clicked" x:Name="Btnr" HorizontalOptions="Start" VerticalOptions="Center" CornerRadius="5" 
                TranslationY="200" TranslationX="20"/>
        
        <Button Text="Guardar" Clicked="BtnG_Clicked" HorizontalOptions="End" VerticalOptions="Center" CornerRadius="5" 
                TranslationY="140" TranslationX="-20"/>
    </StackLayout>
        
 
</ContentPage>