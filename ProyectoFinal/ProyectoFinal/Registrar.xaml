<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Registrar" BackgroundImageSource="https://i.pinimg.com/236x/86/5b/84/865b84d5623088c7b19fa57b07ffbe75.jpg">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="CenterAndExpand" Text="Nuevo Usuario" TextColor="Gray" FontSize="30" HeightRequest="60"/>
            <Entry Placeholder="Nombre" PlaceholderColor="White" TextColor="White" x:Name="txtNombre"/>
            <Entry Placeholder="Apellidos" PlaceholderColor="White" TextColor="White" x:Name="txtApellido"/>
            <Entry Placeholder="Correo" PlaceholderColor="White" TextColor="White" x:Name="txtCorreo"/>
            <Entry Placeholder="Contraseña" PlaceholderColor="White" TextColor="White" x:Name="txtContraseña"/>
            <Button VerticalOptions="Center" Text="Registrar" x:Name="Registro" CornerRadius="60" BorderWidth="2" BorderColor="Gray" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>